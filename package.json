{
  "lint-staged": {
    "*.php": "php ./server/vendor/bin/php-cs-fixer fix --config .php_cs",
    "*.{js,jsx,ts}": "npx prettier --write ./client/src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3"
  },
  "devDependencies": {
    "prettier": "^2.0.4"
  }
}
